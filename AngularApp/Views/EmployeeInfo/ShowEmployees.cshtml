<h2>List of Employees</h2>
<a ng-click="addEmployee()" style="cursor:pointer"> Add Employee </a>
<br />
<table class="table table-bordered table-condensed">
    <thead>
        <tr>
            <th>EmpNo</th>
            <th>EmpName</th>
            <th>Salary</th>
            <th>DeptName</th>
            <th>Designation</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="Emp in Employees">
            <td>{{Emp.EmpNo}}</td>
            <td>{{Emp.EmpName}}</td>
            <td>{{Emp.Salary}}</td>
            <td>{{Emp.DeptName}}</td>
            <td>{{Emp.Designation}}</td>
            <td><a ng-click="editEmployee(Emp.EmpNo)" style="cursor:pointer">Edit</a></td>
            <td><a ng-click="deleteEmployee(Emp.EmpNo)" style="cursor:pointer">Delete</a></td>
        </tr>
    </tbody>
</table>


 
<div>{{error}}</div>

 

